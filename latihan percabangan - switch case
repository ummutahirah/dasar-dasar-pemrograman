#include <iostream>

using namespace std;
#include <iostream>
using namespace std;

int pilihan;
string bulan;

int main (){
    cout << "Daftar Nama Bulanan:\n";
    cout << "1. january\n2. febuari\3. Maret\n4. April\n5. Mei\n6. juni";
    cout << "\n7. juli\n8. agustus\n9. September\n10. Oktober\n11. November\n12. Desember" << endl;

    ulangi:

    cout << "Masukan pilihan anda (1-12): ";

    cin >> pilihan;
    switch(pilihan){
      case 1:
    bulan = "Januari";
    break;

    case 2:
    bulan = "Februari";
    break;

    case 3:
    bulan = "Maret";
    break;

    case 4:
    bulan = "April";
    break;
    case 5:
      bulan = "Mei";
    break;

    case 6:
      bulan = "juni";
    break;
    case 7:
      bulan = "Juli";
    break;

    case 8:
      bulan = "Agustus";
    break;

    case 9:
      bulan = "September";
    break;

    case 10:
       bulan ="Oktober";
    break;

    case 11:
      bulan = "November";
    break;

    case 12:
      bulan = "Desember";
    break;

    default:
      goto ulangi;
}

cout << "Anda Memilih bulan " << bulan << endl;
return 0;
}
