#include <iostream>
using namespace std;

int main () {

cout<<endl ; 
cout<<endl ; 
cout<<" |============================================================= | "<<endl;
cout<<" | A  | B | C |  A or B  |  A or C  | F1 = (A OR B) AND (A OR C)| "<<endl; 
cout<<" |============================================================= | "<<endl;
cout<<" | 0 | 0 | 0 |       "<<(0||0)<<"  | "<<(0||0)<<"       |\t\t   | "<<((0||0)&&(0||0)) <<"\t\t |"<<endl;
cout<<" | 0 | 0 | 1 |       "<<(0||0)<<"  | "<<(0||1)<<"       |\t\t   | "<<((0||0)&&(0||1)) <<"\t\t |"<<endl;
cout<<" | 0 | 1 | 0 |       "<<(0||1)<<"  | "<<(0||0)<<"       |\t\t   | "<<((0||1)&&(0||0)) <<"\t\t |"<<endl;
cout<<" | 0 | 1 | 1 |       "<<(0||1)<<"  | "<<(0||1)<<"       |\t\t   | "<<((0||1)&&(0||1)) <<"\t\t |"<<endl;
cout<<" | 1 | 0 | 0 |       "<<(1||0)<<"  | "<<(0||0)<<"       |\t\t   | "<<((1||0)&&(1||0)) <<"\t\t |"<<endl;
cout<<" | 1 | 0 | 1 |       "<<(1||0)<<"  | "<<(0||0)<<"       |\t\t   | "<<((1||0)&&(1||1)) <<"\t\t |"<<endl;
cout<<" | 1 | 1 | 0 |       "<<(1||1)<<"  | "<<(0||0)<<"       |\t\t   | "<<((1||1)&&(1||0)) <<"\t\t |"<<endl;
cout<<" | 1 | 1 | 1 |       "<<(1||1)<<"  | "<<(0||0)<<"       |\t\t   | "<<((1||1)&&(1||1)) <<"\t\t |"<<endl;
cout<<" |==============================================================| "<<endl;

return 0;
}
